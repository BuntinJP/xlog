<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range .Data.Pages }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
    {{ if .IsPage }}
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
    {{ end }}
  </url>
  {{ end }}
</urlset>
